@using TopLearn.Core.Convertors
@using TopLearn.Core.DTOs
@model TopLearn.Core.DTOs.ChargeWalletViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<h4>ChargeWalletViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<hr/>
@{
    List<WalletViewModel> list = ViewBag.ListWallet as List<WalletViewModel>;
}
<table class="table table-bordered">
    <tr>
        <th>مبلغ</th>
        <th>تاریخ</th>
        <th>نوع تراکنش</th>
        <th>شرح</th>
    </tr>
    @foreach (var item in list)
    {
            <tr>
                <td>@item.Amount.ToString("#,0 تومان")</td>
                <td>
                @item.DateTime.ToShamsi()
                </td>
                <td>
                @if (item.Type == 1)
                {
                            <p class="text-success">واریز به حساب</p>
                }
                else
                {
                            <p class="text-danger">برداشت از حساب</p>
                }
                </td>
                <td>
                @item.Description
                </td>
            </tr>
    }
</table>


